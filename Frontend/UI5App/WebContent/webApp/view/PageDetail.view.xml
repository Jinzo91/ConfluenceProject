<mvc:View
	controllerName="webApp.controller.PageDetail"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:commons="sap.ui.commons"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		showHeader="false"
		class="sapUiSmallMargin"
		showNavButton="true"
		navButtonPress="onNavBack"
		>
		<subHeader>
			<Toolbar>
				<Button type="Back" tooltip="Back" press="onNavBack"/>
				<Label text="{/title}"/>
			</Toolbar>
		</subHeader>
		
			<VBox
			class="sapUiSmallMargin"
			>
				<Label text="{/date}"/>

				<html:center>							
				<commons:FormattedTextView
            htmlText="{/body}" />		
				</html:center>

				<Label text="Tags:"/>
				<html:center>
				<Input 
				width="80%"
				
				value="{/tags}{/geTags}"/>
				</html:center>

			</VBox>
		<footer>
			<Toolbar>
				<ToolbarSpacer/>
				<Button text="Generate Tags" icon="sap-icon://tag" press="generateTags"/>
				<Button id="accept" text="Accept" type="Accept" press="acceptTags"/>
				<Button text="Reject" type="Reject" press="rejectTags"/>
				
			</Toolbar>
		</footer>
	</Page>
</mvc:View>