<mvc:View
	controllerName="webApp.controller.PageDetail"
	height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:commons="sap.ui.commons"
	xmlns="sap.m"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page
		showHeader="false"
		class="sapUiSmallMargin"
		showNavButton="true"
		navButtonPress="onNavBack"
		>
		<subHeader>
			<Toolbar>
				<Button type="Back" tooltip="Back" press="onNavBack"/>
				<Label text="{/title}"/>
			</Toolbar>
		</subHeader>
		<Panel>
			<VBox
			class="sapUiSmallMargin"
			>
				<Label text="{/date}"/>
				
				<Label id="docId"
				text="{/id}"/>
				
				<html:center style = "margin:40px">							
				<commons:FormattedTextView
            		htmlText="{/body}" />		
				</html:center>

				<html:div align="left"
				style = "margin:20px">
				<Label text="Tags:"/>
				<html:p style = "margin:20px" >
				<Text 
				text="{/tags}"/>
				</html:p>
				</html:div>

				<html:div align="left"
				style = "margin:20px">
				<Button 
				type="Transparent"
				text="Generate Tags:"
				icon="sap-icon://tag"
				press="generateTags"/>
				</html:div>
				<html:div align="left" style = "margin:10px">
						<Input value="{/newtags}" width="70%"/>
						<Button id="accept" text="Accept" type="Accept" press="acceptTags" width="10%"/>
						<Button text="Reject" type="Reject" press="rejectTags" width="10%"/>
				</html:div>

			</VBox>
			</Panel>
	</Page>
</mvc:View>