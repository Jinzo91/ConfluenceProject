<mvc:View
	controllerName="webApp.controller.PageConnect"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Panel
		class="sapUiResponsiveMargin"
		width="auto"
		>
		<VBox class="sapUiSmallMargin">
		<f:SimpleForm
			editable="true"
			layout="ResponsiveGridLayout"
			title="Connect to Confluence"
			adjustLabelSpan="false"
			emptySpanL="4">
			<f:content>
				<Label text="URL" />
				<Input id="url"/>
				
				<Label text="Confluence Space (optional)" />
				<Input id="space"  />
				
				<Label text="Username" />
				<Input id="username" />

				<Label text="Password" />
				<Input id="password" type="Password" />
	
				<Label text="" />
				<html:div align="right">
				<Button id="connect" type="Default" text="Log in" press="onPress"/>
				</html:div>
			</f:content>
		</f:SimpleForm>
	</VBox>
	</Panel>
</mvc:View>
