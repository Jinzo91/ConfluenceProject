<mvc:View
 	controllerName="webApp.controller.PageOverview" 
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:table="sap.ui.table"
	xmlns:l="sap.ui.commons.layout"
	xmlns:html="http//www.w3.org/1999/xhtml">

	<Panel 
		class="sapUiResponsiveMargin"
		width="auto">
	 	<Bar>
	 		<contentLeft>
	 			<SearchField search="HandleSearch" />
	 		</contentLeft>
	 	</Bar>
	</Panel>
	<table:Table
		id="pageoverview"
		class="sapUiResponsiveMargin"
		width="auto"
		visibleRowCount="12"
		selectionMode="Single"
		editable="false"
		rows="{/result}"
		rowSelectionChange="updateDetails"
		
		>
		
	
		<table:Column sortProperty="{tags}">
			<table:label>
				<Label text="Documents" design="Bold"/>
			</table:label>
			<table:template>
				<Label text="{title}"/>
			</table:template>
		</table:Column>
		<table:Column>
			<table:label>
				<Label text="tags" design="Bold"/>
			</table:label>
			<table:template>
				<Label text="{tags}"></Label>
			</table:template>
		</table:Column>
		<table:Column>
			<table:label>
				<Label text="date" design="Bold"/>
			</table:label>
			<table:template>
				<Label text="{date}"></Label>
			</table:template>
		</table:Column>

	</table:Table>


</mvc:View>